<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Lista"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Panel accessibleRole="Region">
	<Table 
		id="Lista"
		items="{
        path: 'listaDosLivros>/',
        sorter: {
            path: 'autor',
            group: true
        }
        }">
		<headerToolbar>
					<Toolbar>
							<Title/>
							<ToolbarSpacer/>
							<SearchField width="45%" search=".aoFiltrarLivros"/>
					</Toolbar>
		</headerToolbar>
		<columns>
		
        <Column>
            <Text text="{i18n>titulo}"/>
        </Column>
        <Column>
            <Text text="{i18n>editora}"/>
        </Column>
        <Column>
            <Text text="{i18n>data}"/>
        </Column>
        <Column>
            <Text text="{i18n>autor}"/>
        </Column>
       
    </columns>
		<items>
			
			<ColumnListItem
				type="Navigation"
				press="aoPressionar">
				<cells>
					<Text text="{listaDosLivros>nome}"/>
					<Text text="{listaDosLivros>id}"/>
					<Text text="{listaDosLivros>editora}"/>
					<Text text="{listaDosLivros>data}"/>
					<Text text="{
							path: 'listaDosLivros>autor',
							type: 'sap.ui.model.type.DateTime',
							formatOptions: {
								style: 'short',
								source: {
								pattern: 'yyyy-MM-ddTHH:mm:ss'
								}
							}
						}" 
						/>
				</cells>
			</ColumnListItem>
		</items>
    </Table>
	</Panel>
</mvc:View>