<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Cadastro"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">

	<Page 
		title= "{i18n>tituloCadastro}"
		showNavButton= "true"
		navButtonPress= ".aoClicarEmBotaoVoltar">
		<headerContent>
			<Button text="Salvar" press=".aoPressionarSalvar" />
		</headerContent>

					<l:VerticalLayout class="sapUiContentPadding" width="30%">
						<Label text="ID" labelFor="input-id" design="Bold"/>
						<Input id="input-id" required="true"
							placeholder="Digite o ID" 
							valueStateText="ID não pode estar vazio para salvar."
							value="{
										path : '/id',
										type : 'sap.ui.model.type.String',
										constraints : {
										minLength: 1,
										maxLength: 4
											}
									}" 
							change= ".aoMudarNome" />

						<Label text="Título" labelFor="input-titulo" design="Bold"/>
						<Input id="input-titulo" required="true"
									placeholder="Digite o Título" 
									valueStateText="Título não pode estar vazio para salvar." 
									value="{
												path : '/titulo',
												type : 'sap.ui.model.type.String',
												constraints : {
												minLength: 1,
												maxLength: 50
													}
											}"
							change= ".aoMudarNome" />

						<Label text="Autor" labelFor="input-autor" design="Bold" />
						<Input id="input-autor" required="true"
								placeholder="Digite o Autor" 
								valueStateText="Autor não pode estar vazio para salvar." 
								value="{
										path : '/autor',
										type : 'sap.ui.model.type.String',
										constraints : {
										minLength: 1,
										maxLength: 100
											}
									}"
							change= ".aoMudarNome" />
									

						<Label text="Editora" labelFor="input-editora" design="Bold"/>
						<Input id="input-editora" required="true" 
								placeholder="Digite a Editora" 
								valueStateText="Editora não pode estar vazio para salvar." 
								value="{
										path : '/editora',
										type : 'sap.ui.model.type.String',
										constraints : {
										minLength: 1,
										maxLength: 100
											}
									}"
							change= ".aoMudarNome" />



						<Label text="Data de Publicação" labelFor="input-data" design="Bold" />
						<Input id="input-data" required="true"  
								placeholder="Digite a Data de Publicação" 
								valueStateText="Data não pode estar vazio para salvar." 
								value="{
										path : '/data',
										type : 'sap.ui.model.type.String',
										constraints : {
										minLength: 1,
										maxLength: 100
											}
									}"
							change= ".aoMudarNome" />


				</l:VerticalLayout>
		</Page>
</mvc:View>

